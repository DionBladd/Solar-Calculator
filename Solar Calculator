class SolarCalculator1 {
    constructor(solarPower, solarHours, solarQuantity, wattage, efficiency=0.85) {
        this.solarPower = solarPower; // in watts
        this.solarHours = solarHours; // in hours
        this.solarQuantity = solarQuantity; //quantity
        this.wattage = wattage; // in watts for solar panels 
        this.efficiency = efficiency; // efficiency of solar panels from my research varies from 0.75 to 0.85
        this.totalEnergyConsumption = 0// in kWh;
        this.DailyEnergyProduction=0;
        this.calculateDailyConsumption(); // in kWh
        this.calculateDailyEnergyProduction(); 

   

    }

 calculateDailyConsumption( solarPower, solarHours, solarQuantity) {

        let totalenergy = 0;
        for (let i =0; i< energyConsumption.length; i++){
            const consumption = energyConsumption[i];

            const solarPower = prompt("Enter value for Solar Power in kwh");
            const solarHours = prompt("Enter value for Solar Hours in hours");
            const solarQuantity = prompt("Enter value for Solar Quantity");
            const energykWh = (solarPower * solarHours * solarQuantity) / 1000; 
            totalenergy += energykWh;

        }

          this.totalEnergyConsumption = totalenergy;
          console.log("Total Energy Consumption in kWh: " + this.totalEnergyConsumption); 
}



//calculateDailyEnergyProduction(solarHours, solarQuantity, solarPower) { 
   // energyProduction = (solarPower * solarHours * solarQuantity) / 1000; 
    //this.calculateDailyEnergyProduction = energyProduction;
//}

    calculateDailyEnergyProduction(solarHours, solarQuantity, wattage, efficiency) {
        const wattage= prompt ("Enter wattage of solar panels in watts");
        const solarQuantity = prompt("Enter value for Solar Quantity");
        const wattage = prompt("Enter wattage of solar panels in watts");
        var totalwatthours = (solarHours * solarQuantity * wattage * this.efficiency) ;
        var energyProduction = totalwatthours / 1000; //kWh conversion
        this.DailyEnergyProduction = energyProduction;

        console.log("Daily Energy Production in kWh: " + this.DailyEnergyProduction);
    }
 }